generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Jewel {
  id String @id @default(uuid())

  name        String
  price       Decimal  @db.Decimal(10, 2)
  stock       Int
  category    String
  material    String
  imageUrl    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("jewels")
}

model Service {
  id String @id @default(uuid())

  name        String
  description String
  price       Int
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}
